@model dynamic
@{
    ViewData["Title"] = "About";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>About This Application
                </h4>
            </div>
            <div class="card-body">
                <h5 class="card-title">@Model.ApplicationName</h5>
                <p class="card-text">@Model.Description</p>
                
                <hr>
                
                <div class="row">
                    <div class="col-md-6">
                        <h6><i class="fas fa-tag text-primary me-2"></i>Version</h6>
                        <p>@Model.Version</p>
                        
                        <h6><i class="fas fa-calendar text-primary me-2"></i>Migration Date</h6>
                        <p>@Model.MigrationDate</p>
                    </div>
                    <div class="col-md-6">
                        <h6><i class="fas fa-code text-primary me-2"></i>Technologies Used</h6>
                        <ul class="list-unstyled">
                            @foreach (var tech in Model.Technologies)
                            {
                                <li><i class="fas fa-check text-success me-2"></i>@tech</li>
                            }
                        </ul>
                    </div>
                </div>
                
                <hr>
                
                <div class="alert alert-info" role="alert">
                    <h6><i class="fas fa-lightbulb me-2"></i>Migration Highlights</h6>
                    <ul class="mb-0">
                        <li>Complete WPF MVVM to ASP.NET Core MVC migration</li>
                        <li>Modern responsive web design with Bootstrap 5</li>
                        <li>Entity Framework Core 8 with async/await patterns</li>
                        <li>Dependency injection and modern .NET 8 features</li>
                        <li>File upload functionality for product images</li>
                        <li>Cookie-based authentication system</li>
                        <li>Comprehensive error handling and logging</li>
                    </ul>
                </div>
                
                <div class="text-center mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
